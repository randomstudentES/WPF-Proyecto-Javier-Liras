<Window x:Class="ProyectoFigma.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoFigma"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="400"
        Background="#BF8654">
    <Grid>
        <TextBlock FontSize="80" Margin="0,56,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" FontFamily="Rockwell">LOGIN</TextBlock>
        <Border BorderThickness="4" Grid.Row="0" Grid.ColumnSpan="2"
        CornerRadius="30" BorderBrush="#733030" Background="#D9B88F" Margin="74,257,74,539">
            <Grid>
                <TextBlock FontSize="14" Margin="20,6,159,51" FontFamily="Rockwell">Usuario</TextBlock>
                <TextBlock FontSize="28" Margin="20,30,20,4" FontFamily="Rockwell">Input</TextBlock>
            </Grid>
        </Border>
        <Border BorderThickness="4" Grid.Row="0"
CornerRadius="30" BorderBrush="#733030" Background="#D9B88F" Margin="74,366,74,430">
            <Grid>
                <TextBlock FontSize="16" Margin="20,6,128,51" FontFamily="Rockwell">Contraseña</TextBlock>
                <TextBlock FontSize="36" Margin="20,24,20,4" FontFamily="Rockwell">Input</TextBlock>
            </Grid>
        </Border>
        <Border Margin="74,603,74,193" BorderBrush="#733030" Background="Transparent" BorderThickness="4" CornerRadius="20">
            <Button Background="#D9B88F">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="20"/>
                    </Style>
                </Button.Resources>
                <TextBlock FontSize="48" FontFamily="Rockwell">Login</TextBlock>
            </Button>
        </Border>
    </Grid>
</Window>
