<Window x:Class="ProyectoFigma.Chats"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Chat"
        Height="900" Width="400"
        Background="#F2E0C9"
        WindowStartupLocation="CenterScreen"
        FontFamily="Segoe UI">

    <Grid>
        <!-- Top bar -->
        <Border Background="#BF8654" Height="72" VerticalAlignment="Top" CornerRadius="0,0,12,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Back button -->
                <Button Width="40" Height="40" Margin="10"
                        HorizontalAlignment="Left" VerticalAlignment="Center"
                        Background="Transparent" BorderThickness="0" Click="Volver_Menu">
                    <Path Data="M 18,0 L 0,10 L 18,20"
                          Stroke="#733030"
                          StrokeThickness="3"
                          StrokeLineJoin="Round"
                          StrokeStartLineCap="Round"
                          StrokeEndLineCap="Round"/>
                </Button>

                <!-- Placeholder for time/notch -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="9:30" FontWeight="Bold" Foreground="#FFFFFF" Margin="0,0,8,0"/>
                    <Ellipse Width="10" Height="10" Fill="#000" Opacity="0.1" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main chat area -->
        <Grid Margin="0,72,0,96">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="64"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left avatar column -->
            <Border Grid.Column="0" Background="#F7E6D0" BorderBrush="#733030" BorderThickness="2,0,2,0">
                <ScrollViewer VerticalScrollBarVisibility="Hidden">
                    <StackPanel Margin="6" VerticalAlignment="Top">
                        <ItemsControl>
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Width="36" Height="36" CornerRadius="18"
                                            BorderBrush="#733030" BorderThickness="2"
                                            Background="#FFFFFF"
                                            Margin="0,6"
                                            VerticalAlignment="Top" HorizontalAlignment="Center">
                                        <Ellipse Fill="#333"/>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                            <!-- Dummy items -->
                            <sys:String>1</sys:String>
                            <sys:String>2</sys:String>
                            <sys:String>3</sys:String>
                            <sys:String>4</sys:String>
                            <sys:String>5</sys:String>
                            <sys:String>6</sys:String>
                            <sys:String>7</sys:String>
                            <sys:String>8</sys:String>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Chat bubbles -->
            <Border Grid.Column="1" Margin="8"
                    Background="#F8E8D2"
                    BorderBrush="#733030"
                    BorderThickness="4"
                    CornerRadius="20">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="12">
                    <StackPanel>
                        <Border Background="#D9B88F"
                                CornerRadius="16"
                                Padding="12"
                                Margin="0,8"
                                MaxWidth="220"
                                HorizontalAlignment="Right"
                                BorderBrush="#C1A07D"
                                BorderThickness="1">
                            <TextBlock Text="Hola, ¿cómo estás?" TextWrapping="Wrap" Foreground="#5A3A2A"/>
                        </Border>

                        <Border Background="#D9B88F"
                                CornerRadius="16"
                                Padding="12"
                                Margin="0,8"
                                MaxWidth="220"
                                HorizontalAlignment="Right"
                                BorderBrush="#C1A07D"
                                BorderThickness="1">
                            <TextBlock Text="Estoy probando la UI." TextWrapping="Wrap" Foreground="#5A3A2A"/>
                        </Border>

                        <Border Background="#D9B88F"
                                CornerRadius="16"
                                Padding="12"
                                Margin="0,8"
                                MaxWidth="220"
                                HorizontalAlignment="Right"
                                BorderBrush="#C1A07D"
                                BorderThickness="1">
                            <TextBlock Text="No se que poner" TextWrapping="Wrap" Foreground="#5A3A2A"/>
                        </Border>

                        <Border Background="#D9B88F"
                                CornerRadius="16"
                                Padding="12"
                                Margin="0,8"
                                MaxWidth="220"
                                HorizontalAlignment="Right"
                                BorderBrush="#C1A07D"
                                BorderThickness="1">
                            <TextBlock Text="He consegudo que la longitud cambie en base al texto" 
                                       TextWrapping="Wrap" Foreground="#5A3A2A"/>
                        </Border>

                        <Border Background="#D9B88F"
                                CornerRadius="16"
                                Padding="12"
                                Margin="0,8"
                                MaxWidth="220"
                                HorizontalAlignment="Right"
                                BorderBrush="#C1A07D"
                                BorderThickness="1">
                            <TextBlock Text="A ver si me contratas" 
                                       TextWrapping="Wrap" Foreground="#5A3A2A"/>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Bottom input bar -->
        <Border Height="88" VerticalAlignment="Bottom"
                Background="#BF8654"
                CornerRadius="12,12,0,0">
            <Grid Margin="12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Textbox -->
                <Border BorderBrush="#733030" BorderThickness="2"
                        CornerRadius="16" Background="#F8E8D2"
                        Padding="6" VerticalAlignment="Center">
                    <TextBox Background="Transparent"
                             BorderThickness="0"
                             FontSize="16"
                             MinHeight="40"
                             VerticalContentAlignment="Center"
                             TextWrapping="Wrap"
                             AcceptsReturn="False"
                             Text=""/>
                </Border>

                <!-- Send button -->
                <Border Grid.Column="1" Margin="8,0,0,0"
                        VerticalAlignment="Center"
                        BorderBrush="#733030" BorderThickness="2"
                        CornerRadius="12" Background="Transparent">
                    <Button Background="Transparent" BorderThickness="0" Width="72" Height="48">
                        <Path Data="M0,10 L20,0 L6,10 L20,20 Z"
                              Fill="#733030"
                              Width="20" Height="20"
                              Stretch="Uniform"/>
                    </Button>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
